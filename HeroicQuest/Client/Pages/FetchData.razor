@page "/fetchdata"
@using Heroic.Shared
@inject HttpClient Http

<h1>Heroes</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (heroes == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hero in heroes)
            {
                <tr>
                    <td>@hero.Id</td>
                    <td>@hero.Name</td>
                    <td>@hero.Age</td>
                    <td>@hero.Gender</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Hero[] heroes;

    protected override async Task OnInitializedAsync()
    {
        heroes = await Http.GetFromJsonAsync<Hero[]>("https://localhost:44371/api/Heroes");
    }

}
